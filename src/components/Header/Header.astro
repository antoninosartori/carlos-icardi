---

<header>
   <div class="header-container">
      <nav>
         <figure>
            <Image src={logo} alt="Carlos Icardi Logo" />
         </figure>

         <Button
            class="menu-btn"
            bgColor="transparent"
            data-function="toggle_navbar"
         >
            <MenuIcon size={50} />
         </Button>

         <ul class="menu">
            <li><a href="#">Inicio</a></li>
            <li><a href="#">Nuestros Servicios</a></li>
            <li><a href="#">Alcances</a></li>
            <li><a href="#">Contactanos</a></li>
         </ul>
      </nav>
   </div>
</header>

<script>
   function changeBackgroundOnScroll() {
      const headerContainer = document.querySelector(".header-container");
      const menu = document.querySelector(".menu");

      if (menu.classList.contains("navbar-active")) {
         headerContainer.classList.add("bg-scroll");
      }

      if (
         document.body.scrollTop > 0 ||
         document.documentElement.scrollTop > 0
      ) {
         headerContainer.classList.add("bg-scroll");
      } else {
         headerContainer.classList.remove("bg-scroll");
      }
   }

   window.onscroll = () => {
      changeBackgroundOnScroll();
   };
</script>

<style>
   header {
      height: var(--headerHeight);
      position: fixed;
      top: 0;
      left: 0;
      z-index: 100;
      width: 100%;
      transition: background-color 0.5s;
   }

   .bg-scroll {
      background-color: #000000b2;
      transition: background-color 0.5s;
      -webkit-backdrop-filter: blur(10px);
      backdrop-filter: blur(10px);
   }

   .header-container {
      width: 100%;
      max-width: var(--maxWidthContainer);
      margin: 0 auto;
      height: 100%;
      display: flex;
   }

   nav {
      display: flex;
      align-items: center;
      width: 100%;
      height: 100%;
      max-width: var(--maxWidthContent);
      margin: 0 auto;
   }

   figure {
      max-width: 250px;
      width: 100%;
   }

   figure img {
      height: 80%;
      width: auto;
      object-fit: cover;
   }

   .menu {
      width: 100%;
      display: flex;
      /* gap: 64px; */
      list-style: none;
      gap: 5%;
      flex-grow: 1;
      justify-content: flex-end;
   }
   li {
      text-wrap: nowrap;
      color: var(--color-white);
      font-size: var(--fs-body);
      font-weight: bold;
      transition: transform 0.3s ease; /* Agregar una transici√≥n suave */
   }
   li:hover {
      transform: scale(1.2);
   }

   button {
      display: none;
   }

   @media (width <= 768px) {
      button {
         display: block;
         background-color: red;
      }

      nav {
         justify-content: space-between;
      }

      figure {
         padding-left: 20px;
      }

      .menu {
         position: absolute;
         top: var(--headerHeight);
         left: 100%;
         background-color: var(--color-dark-gray);
         flex-direction: column;
         align-items: center;
         justify-content: flex-start;
         gap: 0;
         /* padding-top: 50px; */
         height: calc(100vh - var(--headerHeight));
         transition: 0.4s all;
      }

      .menu li {
         display: flex;
         align-items: center;
         justify-content: center;
         flex-grow: 1;
         width: 100%;
         border-bottom: 1px solid var(--color-black-opacity);
         font-size: var(--fs-h2);
      }

      .menu.navbar-active {
         left: 0;
         transition: 0.4s all;
      }
   }
</style>
