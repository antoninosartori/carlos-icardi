---
import { Image } from "astro:assets";
// import heroBackground from '../assets/hero/bgHeader.jpg'
// import Title from './Title.astro'
import Email from "../assets/icons/Email.astro";
import LinkedIn from "../assets/icons/LinkedIn.astro";
import Instagram from "../assets/icons/Instagram.astro";
import Whatsapp from "../assets/icons/Whatsapp.astro";
import Rectangle from "../assets/hero/tiny_points_rectangule.astro";
import Circle from "../assets/hero/tiny_points.astro";
import Arrow from "../assets/hero/arrow_badge.astro";
import Container from "./Container/Container.astro";
import "@splidejs/splide/css";
import HeroCarousel from "./HeroCarousel/HeroCarousel.astro";
import HeroCarouselSlide from "./HeroCarouselSlide/HeroCarouselSlide.astro";
import SocialMedias from '../components/SocialMedias/SocialMedias.astro'
---

<section class="hero-container">
   <Rectangle class="rectangle" />
   <Circle class="circle" />
   <SocialMedias />

   <div class="hero-carousel-container">
      <HeroCarousel />
   </div>
</section>

<style>
   .hero-container {
      position: relative;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      min-height: 100dvh;
      width: 100%;
      background-image: url("../assets/hero/bgHeader.jpg");
      background-position: center;
      background-size: cover;
   }

   .hero-carousel-container {
      display: flex;
      height: 100%;
      width: 100%;
      align-items: center;
      justify-content: center;
   }

   .rectangle{
      position: absolute;
      top: 100px;
      right: 10%;
      opacity: .3;
      left: unset;
   }

   .circle{
      position: absolute;
      bottom: 100px;
      right: 30%;
      opacity: .3;
   }

@media screen and (min-width: 769px) and (max-width: 1200px) {
   .rectangle{
      top: 100px;
      right: 20%;
   }
}

@media screen and (max-width: 768px) {
   .hero-container{
      padding-top: var(--headerHeight);
   }

   .rectangle, .circle{
      display: none;
   }
}

</style>
