---
const { color, icon, text, href } = Astro.props
---

<!--<NavBigIcon /> - color - icon - text - Href-->
<div>
  <a href={href}>
    <img src={icon} alt=`${text} logo` />
    <p class={color}>{text}</p>
  </a>
</div>

<style>
  div {
    display: flex;
    flex-direction: column;
    text-align: center;
    justify-content: center;

    img {
      width: 260px;
    }
  }

  .blue {
    color: var(--color-dark-blue);
  }
  .orange {
    color: var(--color-orange);
  }
</style>
