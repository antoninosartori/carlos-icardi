---
const {
  width,
  height,
  title,
  colorTitle,
  paragraph,
  colorParagraph,
  fontSizeP,
  fontFamily = 'var(--font-primary)',
  fontWeight = 'regular'
} = Astro.props

const styles = {
  div: {
    display: 'flex',
    flexDirection: 'column',
    gap: '2em',
    width: width,
    height: height
  },
  title: {
    color: colorTitle,
    textAlign: 'start',
    textWrap: 'pretty',
    fontFamily: fontFamily,
    fontWeight: fontWeight
  },
  paragraph: {
    color: colorParagraph,
    fontSize: fontSizeP,
    textAlign: 'start',
    textWrap: 'pretty',
    fontFamily: fontFamily,
    fontWeight: fontWeight
  }
}
---

<div style={styles.div}>
  <h1 style={styles.title}>{title}</h1>
  {paragraph && <p style={styles.paragraph}>{paragraph}</p>}
</div>
