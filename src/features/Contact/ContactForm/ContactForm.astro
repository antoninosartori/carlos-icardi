---
import { Resend } from "resend";
import Button from "../../../components/Button/Button.jsx";

if (Astro.request.method === "POST") {
   const resend = new Resend("re_VhEnPimc_5R91PVT2kb2jvsrJ6X6eQoDi");
   const formData = await Astro.request.formData();
   const name = formData.get('name').toString()
   const email = formData.get('email').toString()
   const subject = formData.get('subject').toString()
   const message = formData.get('message').toString()

   try {
      resend.emails.send({
         from: email,
         to: "sartoriantonino@gmail.com",
         subject: subject,
         html: `<p>${message}</p>`,
      });
   } catch (error) {
      if (error instanceof Error) {
         console.error(error.message);
      }
   }
}
---

<form method="POST">
   <div class="form--content">
      <div class="contact-form--row">
         <div class="contact-form--inputGroup">
            <label for="name">Nombre</label>
            <input id="form--name" type="text" name="name" required />
         </div>

         <div class="contact-form--inputGroup">
            <label for="email">Email</label>
            <input id="form--email" type="text" name="email" required />
         </div>
      </div>

      <div class="contact-form--inputGroup">
         <label for="subject">Asunto</label>
         <input id="form--subject" type="text" name="subject" required />
      </div>

      <div class="contact-form--inputGroup">
         <label for="message">Mensaje</label>
         <textarea id="form--message" rows="10" name="message" required
         ></textarea>
      </div>
   </div>

   <div class="contact-form-button-container">
      <Button
         class="contact-form--button"
         width="130px"
         padding="16px 12px"
         bgColor="var(--color-secondary)"
         type="submit"
         data-function="send_email"
      >
         Enviar
      </Button>
   </div>
</form>

<style>
   form {
      display: flex;
      flex-direction: column;
      gap: 20px;
      width: 100%;
      font-size: var(--fs-body);
   }

   .form--content {
      display: flex;
      flex-direction: column;
      gap: 20px;
   }

   .contact-form--row {
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 20px;
   }

   .contact-form--inputGroup {
      display: flex;
      flex-direction: column;
      gap: 10px;
      width: 100%;
   }

   input {
      padding: 10px;
      width: 100%;
      font-size: var(--fs-body);
      font-family: var(--font-secondary);
      color: var(--color-secondary);
   }

   input:active {
      outline: 1px solid var(--color-secondary);
   }

   textarea {
      resize: none;
      font-size: var(--fs-body);
      font-family: var(--font-secondary);
      padding: 10px;
   }

   textarea:active,
   textarea:focus {
      outline: 1px solid var(--color-secondary);
   }

   label {
      font-family: var(--font-secondary);
      font-size: var(--fs-body);
      font-weight: 600;
      color: var(--color-secondary);
   }

   .contact-form-button-container {
      display: flex;
      justify-content: center;
   }

   .contact-form--button {
   }

   @media (width <= 576px) {
      .contact-form--row {
         flex-direction: column;
      }
   }
</style>
